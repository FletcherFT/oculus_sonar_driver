<launch>
<arg name="record_args" default="-e /oculus/raw_data --split --size=3200"/>

<include file="$(find oculus_sonar_driver)/launch/default_ros.launch">
    <arg name="draw_sonar" value="true"/>
    <arg name="postprocess_sonar" value="true"/>
</include>

<node name="sonar_view" pkg="image_view" type="image_view">
    <remap from="image" to="/postprocess/drawn_sonar"/>
</node>

<node name="record_oculus" pkg="rosbag" type="record" args="$(arg record_args)"/>

</launch>
